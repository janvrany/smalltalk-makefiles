minimum_pre_commit_version: 3.2.0
repos:
  - repo: local
    hooks:
    - id: fix-whitepace
      name: fix-whitepace
      language: system
      entry: '@MAKEFILES_DIR@/hooks/fix-whitespace.sh'

    - id: chk-commit-message
      name: chk-commit-message
      language: python
      entry: '@MAKEFILES_DIR@/hooks/chk-commit-message.py'
      stages: [ 'commit-msg' ]
